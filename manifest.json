{
  "name": "R.I.P. Twitter",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "It's not dead, it's resting",
  "homepage_url": "https://github.com/slikts/riptwitter",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["src/inject.js"],
      "css": ["src/inject.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {},
  "host_permissions": ["https://twitter.com/*"]
}
